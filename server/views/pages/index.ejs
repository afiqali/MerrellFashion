<!DOCTYPE html>
<html>
<head>
    <title>
      <%= title %>
    </title>

    <link href="/publicPRODUCT/stylesheets/modern-business.css" rel="stylesheet">
    <% include ../partials/stylesheetPRODUCT %>
    <% include ../partials/stylesheetSlick %>
    <style>

    .hovershadow:hover {
        box-shadow: 0 0 11.5px rgba(24, 23, 23, 0.2); 
        
    }

    .hovershadow {
      transition: box-shadow .3s;
    }

    </style>
</head>
<body>
  <% include ../partials/navbar %>

  <header>
      <div class="single-item">
          <div style="height:65vh; min-height: 300px; width: 100%">
            <img src="https://images.unsplash.com/photo-1512436991641-6745cdb1723f?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=ad25f4eb5444edddb0c5fb252a7f1dce&auto=format&fit=crop&w=1350&q=80" style="width:100%;">
            <div class="carousel-caption d-none d-md-block">
                <h2><strong style="font-family: Georgia, 'Times New Roman', Times, serif">Merrell Fashion</strong></h3>
                <p style="text-decoration: underline; font-family: Georgia, 'Times New Roman', Times, serif">One Stop For Female Second-Hand Clothes</p>
                <button class="btn btn-secondary" onclick="redirectsignup()">Join Us Today!</button>
              </div>
          </div>
          <div style="height:65vh; min-height: 300px; width: 100%">
              <img src="https://images.unsplash.com/photo-1490725263030-1f0521cec8ec?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=619c17190d12ccb7f413f6f6bb49067a&auto=format&fit=crop&w=1352&q=80" style="width:100%;">
              <div class="carousel-caption d-none d-md-block">
                  <h2><strong style="font-family: Georgia, 'Times New Roman', Times, serif">Merrell Fashion</strong></h3>
                  <p style="text-decoration: underline; font-family: Georgia, 'Times New Roman', Times, serif">Bringing You Quality Apparels!</p>
                  <button class="btn btn-secondary" onclick="redirectsignup()">Join Us Today!</button>
                </div>
            </div>
            <div style="height:65vh; min-height: 300px; width: 100%">
                <img src="https://images.unsplash.com/photo-1484502249930-e1da807099a5?ixlib=rb-0.3.5&s=b036184e85ee6e67a98c83f678874f31&auto=format&fit=crop&w=1267&q=80" style="width:100%;">
                <div class="carousel-caption d-none d-md-block">
                    <h2><strong style="font-family: Georgia, 'Times New Roman', Times, serif">Merrell Fashion</strong></h3>
                    <p style="text-decoration: underline; font-family: Georgia, 'Times New Roman', Times, serif">Experience A Quick And Easy Shopping Experience</p>
                    <button class="btn btn-secondary" onclick="redirectsignup()">Join Us Today!</button>
                  </div>
              </div>
        </div>
  </header>

  <!-- Page Content -->
  <div class="container">

    <h1 class="my-4" style="text-align:center">Our Newest Finds!</h1>

    <!-- Marketing Icons Section -->
    <div class="center">
        <% productlists.forEach(function(productlists){ %>
          <div class="col-lg-4 col-md-6 mb-4"  data-id="<%= productlists.Itemid %>" >
              <div class="card h-100 hovershadow" data-id="<%= productlists.Itemid%>">
                  <img src="/publicPRODUCT/images/<%= productlists.imageName %>" class="figure-img img-fluid img-rounded specific" alt="<%= productlists.imageName %>"
                      style="max-width: 100%; height:250px;">
                  <div class="card-body" style="min-height:164px; max-height:100%">
                      <p class="card-title" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 95%; font-size: 24px" >
                          <a href="products-gallery/view/<%= productlists.Itemid%>" %></a>
                              <%= productlists.ItemName %>
                          </a>
                      </p>
                      <hr>
                      <p>
                          Price: $<%= productlists.price %> 
                      </p>
                      <p style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 100%;" >
                          <%= productlists.Description %>
                      </p>
                      <p class="card-text"></p>
                  </div>
              </div>
                  
          </div>
          <% }); %>
    </div>
    <!-- /.row -->
   

    <hr>
    <!-- Call to Action Section -->
    <div class="row mb-4">
      <div class="col-md-8">
        <p>Already A Member?</p>
      </div>
      <div class="col-md-4">
        <a class="btn  btn-secondary btn-block" href="/login">Sign In!</a>
      </div>
    </div>

  </div>
    <% include ../partials/footer2 %>
    <% include ../partials/javascript %>
    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script type="text/javascript" src="/public/stylesheets/slick/slick.min.js"></script>

    <script  type="text/javascript">

    function redirectsignup() {
      location.href ="/signup"
    }

    $('.single-item').slick({
      dots: true,
      infinite: true,
      speed: 500,
      fade: true,
      cssEase: 'linear',
      autoplay: true,
      autoplaySpeed: 2000,
    });

    $('.center').slick({
  centerMode: true,
  centerPadding: '60px',
  slidesToShow: 3,
  responsive: [
    {
      breakpoint: 768,
      settings: {
        arrows: false,
        centerMode: true,
        centerPadding: '40px',
        slidesToShow: 3
      }
    },
    {
      breakpoint: 480,
      settings: {
        arrows: false,
        centerMode: true,
        centerPadding: '40px',
        slidesToShow: 1
      }
    }
  ]
});
    </script>
</body>
</html>
