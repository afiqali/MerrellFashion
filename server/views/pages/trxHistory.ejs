<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>
        <%= title %>
    </title>
    
    <% include ../partials/javascript %>
    <% include ../partials/stylesheet %>
    <% include ../partials/stylesheetPRODUCT %>
    <% include ../partials/stylesheetSlick %>
    <!-- Custom styles for this template -->
    <link href="/public/stylesheets/logo-nav.css" rel="stylesheet">
    <link href="/public/stylesheets/simple-sidebar.css" rel="stylesheet">
</head>

<body>
    <% include ../partials/navbar %>

    <div id="wrapper">

       <!-- Sidebar -->
       <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="/account">
                        My Account
                    </a>
                </li>
                <li>
                    <a href="/account">Profile</a>
                </li>
                <li>
                    <a href="/trackorder">Order status</a>
                </li>
                <li>
                    <a href="/trxhistory">Payment history</a>
                </li>
                <li>
                    <a href="#">e-wallet</a>
                </li>
            </ul>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">

                <% if (message.length > 0) { %>
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <%= message %>.  
                    </div>
                <% } %>
                
        <% for(i=0;i<receipt.length;i++) { %>
                <div class="list-group">
        
                    <a href="#" class="list-group-item">
                        <div class="Payments">
                            <form action="/payment">
                                
                                <h4 class="list-group-item-heading">
                                    Your Item:
                                </h4>
                                
                                <p class="list-group-item-text">
                                    Name: <%= item[i].ItemName %>
                                </p>
                                <p class="list-group-item-text">
                                      Price: <%= (receipt[i].totalAmount).toFixed(2) %>
                                </p>
                                <p class="list-group-item-text">
                                    Category: <%= item[i].category %>
                                </p>
                                <p class="list-group-item-text">
                                    Description: <%= item[i].Description %>
                                </p> <br>
                               
        
        
        
                                <h4 class="list-group-item-heading">
                                    Your Receipt:
                                </h4>
                                <p class="list-group-item-text">
                                    Payment ID (Keep this for future reference):  <%= receipt[i].payment_id %>
                                    </p>
                                <p class="list-group-item-text">
                                    Payer id: <%= receipt[i].payer_id %>
                                </p>
                                <p class="list-group-item-text">
                                    
                                    <% if (receipt[i].status="c") {  %>
                                        Status: Payment Completed
                                    <% } %>

                                </p>
                                <p>
                                    Order Method: <%= receipt[i].orderMethod %>
                                </p>
                            </form>
                        </div>
                    </a>
                </div>
            <% } %>
            </div>
        </div>
    </div>

    <% include ../partials/footer2 %>

    <% include ../partials/javascript %>

    <script> 
    </script>
</body>