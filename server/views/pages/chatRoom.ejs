  </nav>
    <div class="container">
      <h2>Chat Room</h2>
      <table class="table table-bordered" style="padding-top:100px">
          <thread>
            <tr>
              <th>Item</th>
              <th>Seller<th>
            </tr>
            <% for(var i=0; i < data.length; i++){ %>
              <tr class="rowRecord" data-id="<%= data[i].itemId %>/<%= data[i].sellerId %>/<%= data[i].userId %>">
                <td>
                  <%= data[i].itemId %>
                </td>
                <td>
                  <%= data[i].sellerId %>
                </td>
                <td width="100">
                  <input type="button" class="chatBtn btn btn-primary" value="Chat">
                </td>
              </tr>
              <% } %>
          </thread>
        </table>
      </div>
      <footer class="py-5 bg-dark" style ="position: relative; bottom: 0; width: 100%; top: 334px;">
        <div class="container">
          <p class="m-0 text-center text-white">Copyright &copy; Your Website 2017</p>
        </div>
        <!-- /.container -->
      </footer>
      <script>
        $('.chatBtn').click(function () {
            var record_num = $(this).closest("tr").data('id');
            location.href = "<%- hostPath %>/messages/" + record_num;
        })
      </script>
</body>

</html>