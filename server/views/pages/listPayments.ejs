<!DOCTYPE html>
<html>
    <head>

        <!-- Hi i'm paypal and welcome to jackass -->
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script src="https://www.paypalobjects.com/api/checkout.js"></script>
        
        <% include ../partials/stylesheet %>

        <style>
            .responsive {
            width: 25%;
            height: auto;
            border-radius:10px;
            margin: 1em;
        }
        </style>
    </head>

    <body>

        <div class="responsive" style="display: block;margin:auto 0;position: relative;margin:2em;width:40%">
            <h1 ><a href="http://localhost:3000/products-gallery/" style="text-decoration: none"> Merrell Fashion </a></h1>
            <h5 style=""><%= title %></h5>
        </div>

        <% for(i=0;i<receipt.length;i++) { %>
        <div class="list-group">

            <a href="#" class="list-group-item">
                <div class="Payments">
                    <form action="/payment">
                        
                        <h4 class="list-group-item-heading">
                            Your Item:
                        </h4>
                        
                        <p class="list-group-item-text">
                            Name: <%= item[i].ItemName %>
                        </p>
                        <p class="list-group-item-text">
                              Price: <%= (receipt[i].totalAmount).toFixed(2) %>
                        </p>
                        <p class="list-group-item-text">
                            Category: <%= item[i].category %>
                        </p>
                        <p class="list-group-item-text">
                            Description: <%= item[i].Description %>
                        </p> <br>
                       



                        <h4 class="list-group-item-heading">
                            Your Receipt:
                        </h4>
                        <p class="list-group-item-text">
                            Payment ID (Keep this for future reference):  <%= receipt[i].payment_id %>
                            </p>
                        <p class="list-group-item-text">
                            Payer id: <%= receipt[i].payer_id %>
                        </p>
                        <p class="list-group-item-text">
                            
                            <% if (receipt[i].status="c") {  %>
                                Status: Payment Completed
                            <% } %>



                        </p>
                        <p>
                            Order Method: <%= receipt[i].orderMethod %>
                        </p>


                    </form>
                </div>
            </a>
    </div>
    <% } %>
    <div class="responsive" style="display: block;margin:auto 0;position: relative;margin:2em;width:40%;" >
        <button class="btn btn-large btn-primary"style=""> <a href="http://localhost:3000/profile" style="color:white;text-decoration: none"> Back to Profile</a></button>
        </div>
    </body>
</html>