                    $('.editBtn').click(function () {
                        var record_num = $(this).closest("div").data('id');
                        location.href = "<%-urlPath %>/edit/" + record_num;

                    });

                    $('.searching').click(function () {
                        var searchh = document.getElementById("searchfunct").value;
                        location.href = "/products-gallery/search/" + searchh;

                    });

                    $('.specific').click(function () {
                        var record_num = $(this).closest("div").data('id');
                        location.href = "<%-urlPath %>/view/" + record_num;
                    });

                    $('.deleteBtn').click(function () {
                        var record_num = $(this).closest("div").data('id');
