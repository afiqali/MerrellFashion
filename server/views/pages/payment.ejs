<!DOCTYPE html>
<html>
    <head>

        <!-- Hi i'm paypal and welcome to jackass -->
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script src="https://www.paypalobjects.com/api/checkout.js"></script>
        
        <% include ../partials/stylesheet %>
    </head>

    <body>

        
        <div class="container" style="border:1px; border-radius:20px;border-color: darkmagenta;background-color:#FBFBF9; padding:0px;width:300px;margin-left:50px;margin:30px; ">
            <h1 style="margin:auto;text-align: center;padding:5px"><a href="http://localhost:3000/products-gallery/" style="text-decoration: none;color:darkmagenta;"> Merrell Fashion </a></h1>
            <h5 style="margin:auto;text-align:center;padding:5px"><%= title %></h5>
        </div>


        <div class="list-group">

                    <a href="#" class="list-group-item">
                        <div class="Payments">
                            <form action="/payment/:id" >
                                <h4 class="list-group-item-heading">
                                    <%= item.ItemName %>
                                </h4>
                                <p class="list-group-item-text text-muted" id="price">
                                    <%= item.price %>
                                </p>
                                <p class="list-group-item-text text-muted">
                                    <%= item.category %>
                                </p>
                                <small class="list-group-item-text text-muted">
                                    <%= item.description %>
                                </small>
                                <p class="list-group-item-text text-muted">
                                    <%= item.user_id %>
                                </p>
                                <p class="list-group-item-text text-muted">
                                    <%= item.PickUpLocation %>
                                </p>
                            </form>
                        </div>
                    </a>

            </div>
            <div id="paypal-button-container" class="container" style="border:1px; border-radius:20px;border-color: darkmagenta;background-color:#FBFBF9; padding:0px;width:300px;margin-left:50px;margin:30px; ">
            <div id="paypal-button" style="margin:10px;display:inline">
                </div>
            </div>

        <!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createPayment" style="margin:10px;display:inline">
                Create Order
        </button> -->
        

        
        <div id="confirm" visibility="hidden" display="none" style="border:1px; border-radius:20px;border-color: darkmagenta;background-color:#FBFBF9; padding:0px;width:300px;margin-left:50px;margin:30px; ">
            <div>Ship to:</div>
            <div><span id="recipient"></span>, <span id="line1"></span>, <span id="city"></span></div>
            <div><span id="state"></span>, <span id="zip"></span>, <span id="country"></span></div>
            <button id="confirmButton" class="btn btn-medium"style="background-color:darkmagenta;color:white">Complete Payment</button>
        </div>

        
        <form action="/payment/:id" method="post" id="pay" >


            <div class="modal-body">

                <fieldset class="form-group">
                    <input id="payer_id" name="payer_id" type="hidden">
                </fieldset> 
                <fieldset class="form-group">
                    <input type="hidden" id="totalAmount" name="totalAmount">
                </fieldset>
                <fieldset class="form-group">
                    <input type="hidden" id="payment_id" name="payment_id">
                </fieldset>

                <fieldset class="form-group">
                    <input id="status" type="hidden" name="status">
                </fieldset>
                <fieldset class="form-group">
                    <input id="orderMethod" type="hidden" name="orderMethod">
                </fieldset>
                <!-- <fieldset class="form-group">
                    <label for="delieveryFee">Delivery fee</label>
                    <textarea id="delieveryFee" name="delieveryFee" rows="8" cols="40" class="form-control" placeholder="Delivery Fee" required=""></textarea>
                </fieldset> -->

            </div>

        </form>
        <script>
                document.getElementById('confirm').visibility = 'hidden';
                var price = document.getElementById('price').innerText;
                paypal.Button.render({

                  env: 'sandbox', // Or 'production',
            
                  commit: true, // Show a 'Pay Now' button
            
                  client: {
                    sandbox:    'ASgIBpiKYMCrfefR0StH7CQyCHF-f2eOf8oPqQWcHd1Z4-5I0rd9duV-89CYcSoZu1N6ZsqxAbUfU4Jl',
                    production: 'EHMDSW156-ebLUNz_MP7ZJIPhhHv_y5_L0S7Lt_hfB8zsvduMZIOq19rhVW_H8OX4vm2llexGnyxcL-I'
                  },

                  style: {
                    color: 'gold',
                    size: 'small'
                  },
            
                  payment: function(data, actions) {
                    // Set up payment here!
                    // Make a call to the REST api to create the payment
                    return actions.payment.create({
                        payment: {
                            transactions: [
                                {
                                    amount: { total: price, currency: 'USD' }
                                }
                            ]
                        }
                    });
                  },
 

                 onAuthorize: function(data, actions) {

                    // Get the payment details

                    

                    return actions.payment.get().then(function(data) {

                        document.getElementById('confirm').visibility = 'visibility';
                        // Display the payment details and a confirmation button

                        var shipping = data.payer.payer_info.shipping_address;
    
                        document.querySelector('#recipient').innerText = shipping.recipient_name;
                        document.querySelector('#line1').innerText     = shipping.line1;
                        document.querySelector('#city').innerText      = shipping.city;
                        document.querySelector('#state').innerText     = shipping.state
                        document.querySelector('#zip').innerText       = shipping.postal_code;
                        document.querySelector('#country').innerText   = shipping.country_code;
                        

                        document.querySelector('#paypal-button-container').style.display = 'none';
                        document.querySelector('#confirm').style.display = 'block';
                        
                        var paymentDetails = data.payer;
                        var payerDetails = data.payer.payer_info;
                        var transaction = data.transactions;
                        var payment_id = data.id;

                        var payer_id = payerDetails.payer_id;
                        // alert(payer_id);
                        $('#payer_id').val(payer_id);


                        var payment_method = paymentDetails.payment_method;
                        // alert(payment_method);
                        $('#orderMethod').val(payment_method);

                        var payment_id = payment_id;
                        $('#payment_id').val(payment_id);

                        var status = paymentDetails.status;
                        // alert(status);
                        $('#status').val(status);


                        var amount = parseInt(transaction[0].amount.total);
                        // alert(amount);
                        $('#totalAmount').val(amount);
   

                        

                        // Listen for click on confirm button

                        document.querySelector('#confirmButton').addEventListener('click', function() {

                            // Disable the button and show a loading message

                            document.querySelector('#confirm').innerText = 'Loading...';
                            document.querySelector('#confirm').disabled = true;

                            // Execute the payment

                            return actions.payment.execute().then(function() {
                                document.querySelector('#confirm').style.display = 'none';
                                // submit form automatically
                                
                                $('#pay').submit();
                        
                            });
                        });
                    });
                    
                },
            
                  onCancel: function(data, actions) {
                    /*
                     * Buyer cancelled the payment
                     */
                  },
            
                  onError: function(err) {
                    /*
                     * An error occurred during the transaction
                     */
                    alert(err)
                  }
                }, '#paypal-button');

              </script>

            <% include ../partials/footer %>
            <% include ../partials/javascript %>
    </body>
</html>